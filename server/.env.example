# ============================================
# BLOOM KEEPER BOT - Environment Variables
# ============================================

# REQUIRED - Blockchain Configuration
RPC_URL=https://mainnet.base.org
KEEPER_PRIVATE_KEY=your_keeper_wallet_private_key_here

# REQUIRED - Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_postgres_password
DB_DATABASE=bloom_bot

# OPTIONAL - Server Configuration
PORT=3000

# OPTIONAL - Storage Configuration
# Options: 'postgres' (default), 'file', 'memory'
STORAGE_TYPE=postgres

# OPTIONAL if STORAGE_TYPE=file
STORAGE_DATA_DIR=./data
