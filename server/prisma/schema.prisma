generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/keeper.db"
}

model TradeDecision {
  id                String   @id @default(uuid())
  timestamp         DateTime @default(now())
  symbol            String
  longExchange      String
  shortExchange     String
  longFundingRate   Float
  shortFundingRate  Float
  spread            Float
  decision          String   // EXECUTED, SKIPPED, REJECTED
  reason            String
  expectedReturnUsd Float?
  actualReturnUsd   Float?
  positionValueUsd  Float?
  executionTimeMs   Int?
  
  @@index([timestamp])
  @@index([symbol])
  @@map("trade_decisions")
}

model BotState {
  poolId              String   @id
  priceLower          Float
  priceUpper          Float
  lastRebalancePrice  Float
  lastRebalanceAt     DateTime @default(now())
  currentVolatility   Float?
  currentHurst        Float?
  isActive            Boolean  @default(true)

  @@map("bot_state")
}

model Candle {
  id           String   @id @default(uuid())
  poolAddress  String
  timestamp    DateTime
  open         Float
  high         Float
  low          Float
  close        Float
  volume       Float

  @@unique([poolAddress, timestamp])
  @@index([poolAddress, timestamp])
  @@map("candles")
}
